@model  WebsitePerformance.ModelView.AddModelView
@{
    ViewBag.Title = "Websites performance";
}

<div>
    @using (Html.BeginForm("Add", "Home"))
    {
        <div class="form-group">
            @Html.Label("Enter the URL")
            @Html.TextBox("Url", "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Measure Response Time</button>
        </div>
    }
</div>

<div id="chartContainer"></div>

<div id="site-table">
    <table class="table table-bordered" id="results">
        <thead>
            <tr>
                <th>Url</th>
                <th>Max Time</th>
                <th>Min Time</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.PageResponses != null)
        {
            foreach (var page in Model.PageResponses)
             {
                 <tr>
                     <td>@page.Item1</td>
                     <td>@page.Item2 ms</td>
                     <td>@page.Item3 ms</td>
                 </tr>
             }
        }
        </tbody>
    </table>
</div>


@section scripts
{
<script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Responce time"
            },
            axisY: {
                title: "Time in ms"
            },
            dataPointWidth: 10,
            data: [
            {
                type: "column",
                legendText: "Min response time",

                showInLegend: "true",

                dataPoints: @Html.Raw(Model.MinTime)
            }, {
                type: "column",
                legendText: "Max response time",
                showInLegend: "true",

                dataPoints: @Html.Raw(Model.MaxTime)
            }
            ]
        });
        chart.render();
    });
</script>
}



