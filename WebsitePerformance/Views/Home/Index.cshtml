@model  WebsitePerformance.ModelView.AddModelView
@{
    ViewBag.Title = "Websites performance";
}

<div>
    @using (Html.BeginForm("Add", "Home"))
    {

        <div class="form-group">
            @Html.Label("Enter the URL")
            @Html.TextBox("Url", "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>

        @Html.Hidden("Id", Model.MaxId)
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Get sitemap</button>
        </div>
    }
</div>

<div id="chartContainer"></div>

<div id="site-table">
    <table class="table table-bordered" id="results">
        <thead>
            <tr>
                <th>Url</th>
                <th>Max Time</th>
                <th>Min Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var site in Model.TestedSites)
            {
                <tr>
                    <td>@site.Url</td>
                    <td>@site.MaxTime ms</td>
                    <td>@site.MinTime ms</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section scripts
{
<script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Responce time"
            },
            axisY: {
                title: "Time in ms"
            },
            dataPointWidth: 30,
            data: [
            {
                type: "column",
                legendText: "Min response time",

                showInLegend: "true",

                dataPoints: @Html.Raw(Model.MinTimeJSON)
            }, {
                type: "column",
                legendText: "Max response time",
                showInLegend: "true",

                dataPoints: @Html.Raw(Model.MaxTimeJSON)
            }
            ]
        });
        chart.render();
    });
</script>
}



